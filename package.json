{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Portfolio website with MongoDB backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "clean": "rimraf dist",
    "minify-html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true index.html -o dist/index.html",
    "minify-css": "postcss style.css -u cssnano -o dist/style.css",
    "minify-js": "terser script.js -o dist/script.js -c -m",
    "build": "npm run clean && mkdir dist && npm run minify-html && npm run minify-css && npm run minify-js",
    "optimize-images": "imagemin images/--plugin=mozjpeg --plugin=pngquant --plugin=webp --out-dir=dist/images",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "portfolio",
    "mongodb",
    "express",
    "nodejs"
  ],
  "author": "Sazal",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "mongoose-paginate-v2": "^1.9.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "html-minifier-terser": "^7.2.0",
    "imagemin-cli": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "nodemon": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
